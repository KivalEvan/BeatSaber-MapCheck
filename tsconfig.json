{
    "compilerOptions": {
        "outDir": "src",
        "target": "es5",
        "module": "es6",
        "allowJs": true,
        "moduleResolution": "node",
        "watch": true,
        "removeComments": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "strictPropertyInitialization": true
    }
}